package pb_migrations

import (
	"github.com/pocketbase/pocketbase/core"
	"github.com/pocketbase/pocketbase/migrations"
)

// Fix: ai_agents had no ViewRule (nil = locked), causing pocketbase_drift to
// hang on Chrome web when attempting to cache individual records after a list.
// Match the ListRule so all authenticated users can view agent records.
func init() {
	migrations.Register(func(app core.App) error {
		collection, err := app.FindCollectionByNameOrId("ai_agents")
		if err != nil {
			return err
		}

		rule := "@request.auth.id != ''"
		collection.ViewRule = &rule

		return app.Save(collection)
	}, func(app core.App) error {
		// Rollback: restore nil ViewRule
		collection, err := app.FindCollectionByNameOrId("ai_agents")
		if err != nil {
			return err
		}
		collection.ViewRule = nil
		return app.Save(collection)
	})
}
